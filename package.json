{
  "name": "vue3-delay-watch",
  "version": "0.1.3",
  "description": "Vue 3 watcher composable that waits a minimum delay before passing the latest state to the watch callback.",
  "author": "Maurice Conrad",
  "license": "MIT",

  "type": "module",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "browser": "./build/index.js",

  "types": "./build/types/index.d.ts",


  "exports": {
    ".": {
      "types": "./build/types/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js"
    }
  },


  "peerDependencies": {
    "vue": "^3.2.31"
  },


  "scripts": {
    "build": "tsc && node minify.js",
    "serve": "npm link && npm-watch build",
    "lint": "eslint src/**",
    "dev:prettier": "prettier --write 'src/**/*.{js,ts,json}'",
    "prepublishOnly": "npm run build"
  },

  "devDependencies": {
    "@babel/types": "^7.26.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "npm-watch": "^0.13.0",
    "prettier": "^3.3.3",
    "serve-handler": "^6.1.3",
    "terser": "^5.36.0",
    "typescript": "^5.5.4"
  },

  "engines": {
    "node": "^16.0.0 || ^18.0.0 || >=20.0.0"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/BluePicSoftware/vue3-delay-watch"
  },

  "bugs": {
    "url": "https://github.com/BluePicSoftware/vue3-delay-watch/issues"
  },

  "homepage": "https://github.com/BluePicSoftware/vue3-delay-watch#readme",

  "keywords": [
    "vue3",
    "delay",
    "watch",
    "composable",
    "debounce",
    "throttle",
    "typescript"
  ]
}
